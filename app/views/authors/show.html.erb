<p id="notice"><%= notice %></p>

<section class="pb-5">
  <div class="container">
    <div class="row pt-5">
      <!-- Content-->

      <!-- Post-->
      <article class="post">
        <div class="post-header">
          <h2 class="post-title"><%= @author.name %></h1>
        </div>
        <div class="media post-author-box">
          <img class="d-flex mr-3 rounded-circle" src="/author.png" alt="Generic placeholder image">
          <div class="media-body">

            <ul class="socials list-unstyled mb-0 mt-3">
              <li><a href="http://facebook.com"><i class="mdi mdi-facebook"></i></a></li>
              <li><a href="http://twitter.com"><i class="mdi mdi-twitter"></i></a></li>
              <li><a href="http://instagram.com"><i class="mdi mdi-instagram"></i></a></li>
              <li><a href="http://pinterest.com"><i class="mdi mdi-pinterest"></i></a></li>
            </ul>
          </div>
        </div>
      </article>

      <!-- Post-->
      <article class="post">
        <div class="post-header">
          <h2 class="post-title">Posts</h2>
        </div>
        <% @author.posts.each do |post| %>
          <div class="media post-author-box">
            <div class="media-body">
              <h5 class="mb-0"><%= link_to post.title, post %></h5>
              <p class="mb-0"><%= post.body.truncate_words(20) %></p>
            </div>
          </div>
        <% end %>
      </article>
    </div>
  </div>
</section>
