<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <section class="h-100vh pt-5">
    <div class="home-center">
      <div class="home-desc-center">
        <div class="container">
          <div class="justify-content-center">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, id: 'author', autofocus: true, autocomplete: "name" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, id: 'author', autofocus: true, autocomplete: "email" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :twitter_handle %><br />
                <%= f.text_field :twitter, id: 'author', autofocus: true, autocomplete: "twitter" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :github_username %><br />
                <%= f.text_field :github, id: 'author',autofocus: true, autocomplete: "github" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :website %><br />
                <%= f.text_field :website, id: 'author', autofocus: true, autocomplete: "website" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :bio %><br />
                <%= f.text_area :bio, id: 'author', autofocus: true, autocomplete: "bio" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :current_password %> <i>(to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.submit "Update" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
